ssl_certificate /etc/nginx/certs/ssl.cert;
ssl_certificate_key /etc/nginx/certs/ssl.key;

server {
  listen 80;
  server_name ${TH_HOST};

  # Ensure we always use SSL for tiddlyhost
  return 301 https://$host$request_uri;
}

