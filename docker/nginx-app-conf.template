server {
  listen 443 ssl;
  server_name ${TH_HOST};

  # Avoid '413 Request Entity Too Large' when saving TiddlyWikis.
  # Using 0 here means unlimited, but I'm thinking some kind of limit
  # is probably a good idea. 200m seems large enough. A new site is 2m.
  client_max_body_size 200m;

  location / {
    # Rails needs to know the real host
    # since Tiddlyhost does domain based routing
    proxy_set_header Host $host;

    # Something to help Devise not be confused about http vs https..?
    proxy_set_header X-Forwarded-Proto https;

    # Devise record IP addresses for logins so let it know the real IP address.
    proxy_set_header X-Real-IP $remote_addr;

    # Not sure..?
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_redirect off;

    # Pass requests to the Rails app
    proxy_pass http://${APP_HOST}:3333;
  }
}
